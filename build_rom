mkdir -p ~/.bin ~/android/rom ~/ccache/
curl https://storage.googleapis.com/git-repo-downloads/repo > ~/.bin/repo
chmod a+rx ~/.bin/repo
cd ~/android/rom

~/.bin/repo init -u  https://github.com/projectarcana-aosp/manifest -b 12.x
mkdir -p .repo/local_manifests
curl https://raw.githubusercontent.com/monu70152/local_manifest/arcananew/local_manifest.xml -o .repo/local_manifests/local_manifest.xml
~/.bin/repo sync -c --force-sync
printf 'umask = 421' >> ~/ccache/ccache.conf
ccache -M 9G
. build/envsetup.sh
lunch aosp_X00TD-userdebug
export CCACHE_DIR=~/ccache
export CCACHE_EXEC=$(command -v ccache)
export USE_CCACHE=1

export TZ=Asia/Kolkata
export SELINUX_IGNORE_NEVERALLOWS=true 
mka bacon

